CompileFlags:
  Add:
    - -std=c++20
    - -Wall
    - -Wextra
    - -Wpedantic
  Remove:
    - -W*
    - -f*
    - -m*

Index:
  Background: Build
  StandardLibrary: Yes

InlayHints:
  Enabled: Yes
  ParameterNames: Yes
  DeducedTypes: Yes

Hover:
  ShowAKA: Yes

Diagnostics:
  ClangTidy:
    Add:
      - readability-*
      - performance-*
      - modernize-*
    Remove:
      - readability-magic-numbers
      - readability-uppercase-literal-suffix
      - readability-braces-around-statements
      - modernize-use-trailing-return-type
  UnusedIncludes: Strict
  MissingIncludes: Strict

Completion:
  AllScopes: Yes

